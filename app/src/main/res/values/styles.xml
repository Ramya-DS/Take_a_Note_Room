<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:textViewStyle">@style/RegularTextStyle</item>
    </style>

    <style name="toolBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/heading_font</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="RegularTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="BottomNavDesign" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/heading_font</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Regular" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular_font</item>
    </style>

    <style name="ColorAnimation">
        <item name="android:windowEnterAnimation">@anim/entry_animation</item>
        <item name="android:windowExitAnimation">@anim/exit_animation</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/close_icon</item>
        <item name="android:queryHint">"Search here..."</item>
        <item name="goIcon">@drawable/go_icon</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="searchHintIcon">@null</item>
    </style>


</resources>
